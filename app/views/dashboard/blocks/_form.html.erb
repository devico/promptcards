<%= simple_form_for block do |f| %>
  <div class="form-group">
    <%= f.input :title, label: t('dashboard.blocks.label'),
                input_html: { class: 'form-control', required: true,
                              autofocus: true } %>
  </div>

  <%= f.button :submit, t('dashboard.blocks.submit'), class: 'btn btn-default' %>
<% end %>
