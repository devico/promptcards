<div class="row" id="header">
  <div class="col-sm-12">
    <nav class="navbar navbar-default" id="header">
      <div class="container-fluid">
        <div class="navbar-header">
          <% if current_user %>
            <%= link_to t('app.menu.flashcards_label'), api_promptcards.trainer_path, class: "navbar-brand" %>
          <% else %>
            <%= link_to t('app.menu.flashcards_label'), root_path, class: "navbar-brand" %>
          <% end %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-left">
              <li><%= link_to t('app.menu.all_decks_label'), main_app.blocks_path %></li>
              <li><%= link_to t('app.menu.add_deck_label'), main_app.new_block_path %></li>
              <li><%= link_to t('app.menu.all_cards_label'), main_app.cards_path %></li>
              <li><%= link_to t('app.menu.add_card_label'), main_app.new_card_path %></li>
            </ul>
          <% end %>
          <p class="navbar-text navbar-right">
            <% if user_signed_in? %>
              <%= link_to t('app.menu.user_profile_label'), main_app.edit_profile_path(current_user), class: 'navbar-link' %> |
              <%= link_to t('app.menu.log_out_label'), main_app.destroy_user_session_path, :method => :delete, class: 'navbar-link' %>
            <% else %>
              <%= link_to t('app.menu.sing_up_label'), new_user_registration_path, class: 'navbar-link' %> |
              <%= link_to t('app.menu.log_in_with_github_label'),
                          auth_at_provider_path(provider: :github),
                          class: 'navbar-link'%> |
              <%= link_to t('app.menu.log_in_label'), new_user_session_path, class: 'navbar-link' %> |
              <% I18n.available_locales.each do |locale| %>
                <%=link_to locale, root_path(user_locale: locale), class: 'navbar-link'%>
              <% end %>
            <% end %>
          </p>
        </div>
      </div>
    </nav>
  </div>
</div>
