<h2><%= t('devise.sessions.sign_in') %></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, as: :email, label: t('home.user.email'),
                input_html: { class: 'form-control', required: true,
                              autofocus: true }  %>
    <%= f.input :password, as: :password, label: t('home.user.passwd'),
                input_html: { class: 'form-control', required: true } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('home.user.log_in'), class: 'btn btn-default' %>
  </div>
<% end %>
