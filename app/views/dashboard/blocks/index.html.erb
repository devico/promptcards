<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>Название</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @blocks.each do |block| %>
    <tr class="table table-hover table-condensed">
      <td><%= block.title %></td>

      <% if block.current? %>
        <td>
          <%= link_to t('.set_common'), reset_as_current_block_path(block),
                      method: :put %>
        </td>
      <% else %>
        <td>
          <%= link_to t('.set_current'), set_as_current_block_path(block),
                      method: :put %>
        </td>
      <% end %>
      <td><%= link_to t('.edit'), edit_block_path(block) %></td>
      <td><%= link_to t('.delete'), block, method: :delete,
                      data: { confirm: t('.delete_block') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
